                    <img class=" h-10 w-10 rounded-full mx-auto mr-3 inline-block" src="./images/UserProfiles/<%= user.image %>" onclick="location.href='/my-profile'">
                    <% } else { %>
                        <img class=" h-10 w-10 rounded-full mx-auto mr-3 inline-block" src="/images/avatar.png" onclick="location.href='/my-profile'">
