    <%   }else {%>
        <nav class="fixed w-full bg-white z-10" data-aos="fade-up" data-aos-duration="1500">
            <div class="flex">
                <div class="logo-img"><img src="/images/logo.jpg" alt=""></div>
                <div class="nav-auth">
                    <button class="bg-blue-500 hover:bg-transparent  border hover:text-blue-700 hover:border-blue-500 text-white font-bold py-2 px-4 rounded" onclick="location.href = '/login'">
                        Log In</button>
                    <button class="bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded" onclick="location.href = '/signup'">
